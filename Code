#include <iostream>
using namespace std;

int main()
{
	double a = 0, b = 0;// Переменные чисел
	char h = 0;//Переменная знака вычисления
	double c = 0;//Переменная ответа

	cout << "Пример корректного ввода: 11.2*17.3\nНе забывайте, что дробная часть вводится через точку\n";

	while (1 == 1) {
		h = 0;

		cout << "Введите пример:\n";
		cin >> a >> h >> b;//Ввод

		switch (h) {//Вычисление по знаку
		case '+': c = a + b;
			cout << "= " << c << "\n";//Вывод ответа
			break;
		case '-': c = a - b;
			cout << "= " << c << "\n";
			break;
		case '*': c = a * b;
			cout << "= " << c << "\n";
			break;
		case '/': c = a / b;
			cout << "= " << c << "\n";
			break;
		default: cout << "Ввод некорректен. Пример корректного ввода указывается при запуске программы. Перезапустите программу.\n";
			//Проверка на корректность ввода, если не введён знак вычисления или в принципе не введены цифры, программа закроется
			system("pause");
			return 0;
		}
	}
}
